{
  "manifest_version": 3,
  "name": "Ollama Chat Extension",
  "version": "1.0",
  "description": "Chat with various Ollama models",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}